---
import { Image } from 'astro:assets';

// Testimonials section component with modern professional design
const testimonials = [
    {
        name: "Thomas Weber",
        location: "Kaufbeuren Zentrum",
        rating: 5,
        text: "Super schneller Service! War in 15 Minuten da und hat meine Tür professionell geöffnet. Preis wie am Telefon vereinbart. Sehr empfehlenswert!",
        service: "Türöffnung",
        avatar: "assets/images/testamonials/1.jpg"
    },
    {
        name: "Amelie Vogl",
        location: "Kaufbeuren Oberbeuren",
        rating: 5,
        text: "Mitten in der Nacht ausgesperrt. Der 24h Notdienst war schnell da und sehr freundlich. Faire Preise auch nachts. Danke!",
        service: "Nacht-Notdienst",
        avatar: "assets/images/testamonials/2.jpeg"
    },
    {
        name: "Nils Köhler",
        location: "Kaufbeuren Neugablonz",
        rating: 5,
        text: "Schlosswechsel nach Einbruchsversuch. Hervorragende Beratung zu Sicherheitsschlössern. Fühlen uns jetzt viel sicherer.",
        service: "Schlosswechsel & Sicherheitsberatung",
        avatar: "assets/images/testamonials/3.webp"
    },
    {
        name: "Andrea Klein",
        location: "Kaufbeuren Hirschzell", 
        rating: 5,
        text: "Auto-Schlüsseldienst war top! Schnell, professionell und ohne Kratzer am Lack. Preis-Leistung stimmt definitiv.",
        service: "Auto-Schlüsseldienst",
        avatar: "assets/images/testamonials/4.jpeg"
    }
];

const trustMetrics = [
    {
        number: "1000+",
        label: "Zufriedene Kunden",
        description: "Vertrauen unserem Service"
    },
    {
        number: "4.9/5",
        label: "Google Bewertung",
        description: "Durchschnittliche Kundenbewertung"
    },
    {
        number: "15 Min",
        label: "Ø Anfahrtszeit",
        description: "In Kaufbeuren und Umgebung"
    },
    {
        number: "24/7",
        label: "Verfügbar",
        description: "Auch nachts und am Wochenende"
    }
];
---

<section class="testimonials">
    <div class="testimonials-container">
        <div class="section-header">
            <div class="header-badge">
                <span>Kundenstimmen</span>
            </div>
            <h2>Das sagen unsere Kunden über den Schlüsseldienst Kaufbeuren</h2>
            <p class="section-description">
                Über 1.000 zufriedene Kunden vertrauen unserem Aufsperrdienst. 
                Lesen Sie echte Bewertungen zu unserem 24h Schlüsseldienst in Kaufbeuren.
            </p>
        </div>
        
        <div class="testimonials-grid">
            {testimonials.map((testimonial) => (
                <article class="testimonial-card">
                    <div class="testimonial-header">
                        <div class="customer-info">
                            <Image src={testimonial.avatar} alt={testimonial.name} class="customer-avatar" width={50} height={50} />
                            <div class="customer-details">
                                <h3 class="customer-name">{testimonial.name}</h3>
                                <p class="customer-location">{testimonial.location}</p>
                            </div>
                        </div>
                        <div class="rating">
                            {Array.from({length: testimonial.rating}, (_, i) => (
                                <Image src="assets/icons/star.svg" alt="Star" loading="lazy" width={16} height={16} key={i} />
                            ))}
                        </div>
                    </div>
                    
                    <blockquote class="testimonial-text">
                        "{testimonial.text}"
                    </blockquote>
                    
                    <div class="service-badge">
                        <span>Service: {testimonial.service}</span>
                    </div>
                </article>
            ))}
        </div>
        
        <div class="trust-metrics">
            <h3>Vertrauen Sie auf unsere Expertise</h3>
            <div class="metrics-grid">
                {trustMetrics.map((metric) => (
                    <div class="metric-card">
                        <div class="metric-number">{metric.number}</div>
                        <div class="metric-label">{metric.label}</div>
                        <div class="metric-description">{metric.description}</div>
                    </div>
                ))}
            </div>
        </div>
        
        <div class="testimonial-cta">
            <div class="cta-content">
                <h3>Werden auch Sie unser zufriedener Kunde!</h3>
                <p>Rufen Sie jetzt an für schnelle und professionelle Hilfe</p>
                <button class="cta-button" onclick="window.location.href='tel:+491604996655'">
                    <span class="cta-text">Jetzt anrufen: +49 1604 996655</span>
                    <span class="cta-subtext">Kostenlose Beratung & Kostenvoranschlag</span>
                </button>
            </div>
        </div>
    </div>
</section>

<style>
    .testimonials {
        padding: var(--spacing-20) var(--spacing-6);
        background: linear-gradient(135deg, var(--gray-50) 0%, white 50%, var(--gray-50) 100%);
    }
    
    .testimonials-container {
        max-width: 1200px;
        margin: 0 auto;
    }
    
    .section-header {
        text-align: center;
        max-width: 800px;
        margin: 0 auto var(--spacing-16);
    }
    
    .header-badge {
        display: inline-flex;
        align-items: center;
        background: linear-gradient(135deg, var(--success), var(--success-light));
        color: white;
        padding: var(--spacing-2) var(--spacing-4);
        border-radius: var(--radius-xl);
        font-size: var(--font-sizes-sm);
        font-weight: 600;
        margin-bottom: var(--spacing-6);
    }
    
    .testimonials h2 {
        font-size: var(--font-sizes-4xl);
        margin-bottom: var(--spacing-6);
        color: var(--gray-900);
        line-height: 1.2;
    }
    
    .section-description {
        font-size: var(--font-sizes-lg);
        color: var(--gray-600);
        line-height: 1.6;
        margin: 0;
    }
    
    .testimonials-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: var(--spacing-6);
        margin-bottom: var(--spacing-16);
    }
    
    .testimonial-card {
        background: white;
        padding: var(--spacing-6);
        border-radius: var(--radius-xl);
        box-shadow: var(--shadow-md);
        transition: all 0.3s ease;
        border: 1px solid var(--gray-200);
        position: relative;
    }
    
    .testimonial-card:hover {
        transform: translateY(-6px);
        box-shadow: var(--shadow-xl);
        border-color: var(--success);
    }
    
    .testimonial-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: var(--spacing-4);
    }
    
    .customer-info {
        display: flex;
        align-items: center;
        gap: var(--spacing-3);
    }
    
    .customer-avatar {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        border: 2px solid var(--success);
        object-fit: cover;
    }
    
    .customer-details {
        display: flex;
        flex-direction: column;
    }
    
    .customer-name {
        font-size: var(--font-sizes-lg);
        font-weight: 700;
        color: var(--gray-900);
        margin: 0;
    }
    
    .customer-location {
        font-size: var(--font-sizes-sm);
        color: var(--gray-600);
        margin: 0;
    }
    
    .rating {
        display: flex;
        gap: 2px;
    }
    
    .star {
        width: 16px;
        height: 16px;
    }
    
    .testimonial-text {
        font-style: italic;
        color: var(--gray-700);
        line-height: 1.6;
        margin: 0 0 var(--spacing-4) 0;
        font-size: var(--font-sizes-base);
    }
    
    .service-badge {
        display: inline-flex;
        background: var(--gray-100);
        color: var(--primary-blue);
        padding: var(--spacing-2) var(--spacing-3);
        border-radius: var(--radius-lg);
        font-size: var(--font-sizes-xs);
        font-weight: 600;
    }
    
    .trust-metrics {
        background: white;
        padding: var(--spacing-10);
        border-radius: var(--radius-xl);
        box-shadow: var(--shadow-lg);
        text-align: center;
        margin-bottom: var(--spacing-16);
        border: 1px solid var(--gray-200);
    }
    
    .trust-metrics h3 {
        font-size: var(--font-sizes-3xl);
        font-weight: 700;
        margin-bottom: var(--spacing-8);
        color: var(--gray-900);
    }
    
    .metrics-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: var(--spacing-6);
    }
    
    .metric-card {
        padding: var(--spacing-4);
        border-radius: var(--radius-lg);
        background: var(--gray-50);
        transition: all 0.3s ease;
    }
    
    .metric-card:hover {
        background: var(--primary-blue);
        color: white;
        transform: translateY(-2px);
    }
    
    .metric-number {
        font-size: var(--font-sizes-4xl);
        font-weight: 800;
        color: var(--primary-blue);
        margin-bottom: var(--spacing-2);
    }
    
    .metric-card:hover .metric-number {
        color: white;
    }
    
    .metric-label {
        font-size: var(--font-sizes-lg);
        font-weight: 700;
        color: var(--gray-900);
        margin-bottom: var(--spacing-1);
    }
    
    .metric-card:hover .metric-label {
        color: white;
    }
    
    .metric-description {
        font-size: var(--font-sizes-sm);
        color: var(--gray-600);
    }
    
    .metric-card:hover .metric-description {
        color: rgba(255, 255, 255, 0.9);
    }
    
    .testimonial-cta {
        background: linear-gradient(135deg, var(--primary-blue), var(--primary-blue-dark));
        border-radius: var(--radius-xl);
        padding: var(--spacing-12);
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: var(--spacing-10);
        align-items: center;
        color: white;
        box-shadow: var(--shadow-xl);
    }
    
    .cta-content h3 {
        font-size: var(--font-sizes-3xl);
        font-weight: 700;
        margin-bottom: var(--spacing-4);
        color: white;
    }
    
    .cta-content p {
        font-size: var(--font-sizes-lg);
        margin-bottom: var(--spacing-6);
        opacity: 0.95;
    }
    
    .cta-button {
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        color: white;
        padding: var(--spacing-5) var(--spacing-6);
        border-radius: var(--radius-xl);
        border: 1px solid rgba(255, 255, 255, 0.3);
        transition: all 0.3s ease;
        text-align: center;
        width: 100%;
    }
    
    .cta-button:hover {
        background: rgba(255, 255, 255, 0.3);
        transform: translateY(-2px);
    }
    
    .cta-text {
        display: block;
        font-size: var(--font-sizes-lg);
        font-weight: 700;
        margin-bottom: var(--spacing-1);
    }
    
    .cta-subtext {
        display: block;
        font-size: var(--font-sizes-sm);
        opacity: 0.9;
    }
    
    .cta-image {
        border-radius: var(--radius-lg);
        overflow: hidden;
        box-shadow: var(--shadow-lg);
    }
    
    .cta-image img {
        width: 100%;
        height: 300px;
        object-fit: cover;
    }
    
    @media (max-width: 768px) {
        .testimonials {
            padding: var(--spacing-16) var(--spacing-4);
        }
        
        .testimonials h2 {
            font-size: var(--font-sizes-3xl);
        }
        
        .testimonials-grid {
            grid-template-columns: 1fr;
            gap: var(--spacing-4);
        }
        
        .testimonial-card {
            padding: var(--spacing-4);
        }
        
        .trust-metrics {
            padding: var(--spacing-6);
        }
        
        .trust-metrics h3 {
            font-size: var(--font-sizes-2xl);
        }
        
        .metrics-grid {
            grid-template-columns: repeat(2, 1fr);
            gap: var(--spacing-4);
        }
        
        .testimonial-cta {
            grid-template-columns: 1fr;
            gap: var(--spacing-6);
            padding: var(--spacing-8);
        }
        
        .cta-content h3 {
            font-size: var(--font-sizes-2xl);
        }
    }
</style> 