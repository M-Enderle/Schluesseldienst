---
import { Image } from 'astro:assets';
import { getTexts } from '../utils/textConfig';

const texts = getTexts();
const partners = texts.partners;
const company = texts.company;
const ariaLabels = texts.ariaLabels;
---

<section class="partners">
    <div class="partners-container">
        <div class="section-header">
            <div class="header-badge">
                <span>{partners.badge}</span>
            </div>
            <h2>{partners.title}</h2>
            <p class="section-description">
                {partners.description}
            </p>
        </div>
        
        <div class="partnership-content">
            <div class="partnership-info">
                <div class="info-card">
                    <h3>{partners.qualityTitle}</h3>
                    <p>
                        {partners.qualityDescription}
                    </p>
                    
                    <ul class="quality-features">
                        {partners.features.map((feature) => (
                            <li class="feature-item">
                                <span>{feature}</span>
                            </li>
                        ))}
                    </ul>
                </div>
            </div>
            
            <div class="partnership-visual">
                <div class="image-container">
                    <Image 
                        src="/images/schluesseldienst-visual_720x540.jpg" 
                        alt={ariaLabels.partners.partnerImage}
                        loading="lazy" 
                        width="720" 
                        height="540"
                        class="partnership-image"
                    />
                    <div class="image-overlay">
                        <div class="adac-badge">
                            <span class="badge-title">{partners.badge.title}</span>
                            <span class="badge-subtitle">{partners.badge.subtitle}</span>
                        </div>
                    </div>
                </div>
            
            </div>
        </div>
        
        <div class="partnership-cta">
            <div class="cta-content">
                <h3>{partners.cta.title}</h3>
                <p>{partners.cta.description}</p>
                <button class="cta-button" onclick={`window.location.href='tel:${company.phone}'`} aria-label={ariaLabels.partners.ctaButton}>
                    <span class="cta-text">{partners.cta.buttonText}</span>
                    <span class="cta-subtext">{partners.cta.buttonSubtext}</span>
                </button>
            </div>
        </div>
    </div>
</section>

<style>
    .partners {
        padding: var(--spacing-20) var(--spacing-6);
        background: linear-gradient(135deg, white 0%, var(--gray-50) 50%, white 100%);
    }
    
    .partners-container {
        max-width: 1200px;
        margin: 0 auto;
    }
    
    .section-header {
        text-align: center;
        max-width: 800px;
        margin: 0 auto var(--spacing-16);
    }
    
    .header-badge {
        display: inline-flex;
        align-items: center;
        background: linear-gradient(135deg, #FFD700, #FFA500);
        color: white;
        padding: var(--spacing-2) var(--spacing-4);
        border-radius: var(--radius-xl);
        font-size: var(--font-sizes-sm);
        font-weight: 600;
        margin-bottom: var(--spacing-6);
        box-shadow: var(--shadow-md);
    }
    
    .partners h2 {
        font-size: var(--font-sizes-4xl);
        margin-bottom: var(--spacing-6);
        color: var(--gray-900);
        line-height: 1.2;
    }
    
    .section-description {
        font-size: var(--font-sizes-lg);
        color: var(--gray-600);
        line-height: 1.6;
        margin: 0;
    }
    
    .partnership-content {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: var(--spacing-12);
        align-items: center;
        margin-bottom: var(--spacing-16);
    }
    
    .partnership-info {
        display: flex;
        flex-direction: column;
        gap: var(--spacing-8);
    }
    
    .info-card {
        background: white;
        padding: var(--spacing-8);
        border-radius: var(--radius-xl);
        box-shadow: var(--shadow-lg);
        border: 1px solid var(--gray-200);
        transition: all 0.3s ease;
    }
    
    .info-card:hover {
        transform: translateY(-6px);
        box-shadow: var(--shadow-xl);
        border-color: #FFD700;
    }
    
    .info-card h3 {
        font-size: var(--font-sizes-2xl);
        font-weight: 700;
        color: var(--gray-900);
        margin-bottom: var(--spacing-4);
    }
    
    .info-card p {
        color: var(--gray-600);
        line-height: 1.6;
        margin-bottom: var(--spacing-6);
    }
    
    .quality-features {
        list-style: none;
        padding: 0;
        margin: 0;
    }
    
    .feature-item {
        display: flex;
        align-items: flex-start;
        gap: var(--spacing-3);
        margin-bottom: var(--spacing-3);
        font-size: var(--font-sizes-sm);
        color: var(--gray-700);
    }
    
    .feature-item::before {
        content: 'âœ“';
        color: #FFD700;
        font-weight: bold;
        font-size: var(--font-sizes-lg);
        flex-shrink: 0;
    }
    

    
    .partnership-visual {
        display: flex;
        flex-direction: column;
        gap: var(--spacing-6);
    }
    
    .image-container {
        position: relative;
        border-radius: var(--radius-xl);
        overflow: hidden;
        box-shadow: var(--shadow-xl);
        transition: all 0.3s ease;
    }
    
    .image-container:hover {
        transform: translateY(-4px);
        box-shadow: 0 25px 35px -5px rgba(0, 0, 0, 0.3);
    }
    
    .image-container:hover .partnership-image {
        transform: scale(1.05);
    }
    
    .partnership-image {
        width: 100%;
        height: auto;
        display: block;
        transition: transform 0.3s ease;
    }
    
    .image-overlay {
        position: absolute;
        top: var(--spacing-4);
        right: var(--spacing-4);
    }
    
    .adac-badge {
        background: #FFD700;
        color: white;
        padding: var(--spacing-3) var(--spacing-4);
        border-radius: var(--radius-lg);
        box-shadow: var(--shadow-lg);
        text-align: center;
        transition: all 0.3s ease;
    }
    
    .adac-badge:hover {
        transform: scale(1.1);
        box-shadow: var(--shadow-xl);
        background: #FFA500;
    }
    
    .badge-title {
        display: block;
        font-size: var(--font-sizes-lg);
        font-weight: 800;
        line-height: 1;
    }
    
    .badge-subtitle {
        display: block;
        font-size: var(--font-sizes-sm);
        font-weight: 600;
        opacity: 0.9;
    }
    

    
    .partnership-cta {
        background: linear-gradient(135deg, #FFD700, #FFA500);
        border-radius: var(--radius-xl);
        padding: var(--spacing-12);
        text-align: center;
        box-shadow: var(--shadow-xl);
        width: 100%;
        margin-top: var(--spacing-4);
    }
    
    .cta-content h3 {
        font-size: var(--font-sizes-3xl);
        font-weight: 700;
        margin-bottom: var(--spacing-4);
        color: white;
    }
    
    .cta-content p {
        font-size: var(--font-sizes-lg);
        margin-bottom: var(--spacing-6);
        color: white;
        opacity: 0.95;
    }
    
    .cta-button {
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        color: white;
        padding: var(--spacing-5) var(--spacing-8);
        border-radius: var(--radius-xl);
        border: 1px solid rgba(255, 255, 255, 0.3);
        transition: all 0.3s ease;
        cursor: pointer;
    }
    
    .cta-button:hover {
        background: rgba(255, 255, 255, 0.3);
        transform: translateY(-2px);
        box-shadow: var(--shadow-lg);
    }
    
    .cta-text {
        display: block;
        font-size: var(--font-sizes-lg);
        font-weight: 700;
        margin-bottom: var(--spacing-1);
    }
    
    .cta-subtext {
        display: block;
        font-size: var(--font-sizes-sm);
        opacity: 0.9;
    }
    
    @media (max-width: 1024px) {
        .partnership-content {
            grid-template-columns: 1fr;
            gap: var(--spacing-8);
        }
    }
    
    @media (max-width: 768px) {
        .partners {
            padding: var(--spacing-16) var(--spacing-4);
        }
        
        .partners h2 {
            font-size: var(--font-sizes-3xl);
        }
        
        .partnership-content {
            gap: var(--spacing-6);
        }
        
        .info-card {
            padding: var(--spacing-6);
        }
        
        .partnership-cta {
            padding: var(--spacing-8);
        }
        
        .cta-content h3 {
            font-size: var(--font-sizes-2xl);
        }
    }
</style> 