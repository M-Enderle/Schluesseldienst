---
// Header component using text configuration
import { getTexts } from '../utils/textConfig';

const texts = getTexts();
const header = texts.header;
const company = texts.company;
const ariaLabels = texts.ariaLabels;
---

<header>
    <div class="header-container">
        <a href="/" class="logo" aria-label={ariaLabels.header.logo}>
            <span class="logo-text">
                <span class="logo-line">{header.logo.line1}</span>
                <span class="logo-line">{header.logo.line2}</span>
            </span>
        </a>
        <div class="header-actions">
            <div class="phone-info">
                <span class="phone-label">{header.phoneLabel}</span>
                <a href={`tel:${company.phone}`} class="phone-number" aria-label={ariaLabels.header.phoneLink}>{header.phoneNumber}</a>
            </div>
            <button class="contact-btn" onclick={`window.location.href='tel:${company.phone}'`} aria-label={ariaLabels.header.callButton}>
                <span>{header.callButton}</span>
            </button>
        </div>
    </div>
</header>

<style>
    header {
        background: linear-gradient(135deg, var(--primary-blue) 0%, var(--primary-blue-dark) 100%);
        box-shadow: var(--shadow-lg);
        position: sticky;
        top: 0;
        z-index: 100;
    }

    .header-container {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: var(--spacing-4) var(--spacing-6);
        gap: var(--spacing-8);
        min-width: 0;
        overflow: hidden;
    }

    .logo {
        display: flex;
        align-items: center;
        gap: var(--spacing-3);
        flex-shrink: 1;
        min-width: 0;
        width: fit-content;
    }



    .logo-text {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        color: white;
        line-height: 1;
    }

    .logo-line {
        font-size: var(--font-sizes-xl);
        font-weight: 700;
        white-space: nowrap;
    }

    .header-actions {
        display: flex;
        align-items: center;
        gap: var(--spacing-4);
        min-width: 0;
        flex-shrink: 0;
    }

    .phone-info {
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        color: white;
        min-width: 0;
        flex-shrink: 1;
    }

    .phone-label {
        font-size: var(--font-sizes-xs);
        opacity: 0.8;
        font-weight: 500;
        white-space: nowrap;
    }

    .phone-number {
        font-size: var(--font-sizes-lg);
        font-weight: 700;
        letter-spacing: 0.5px;
        color: white;
        text-align: right;
        white-space: nowrap;
    }

    .contact-btn {
        background: linear-gradient(135deg, var(--success) 0%, var(--success-light) 100%);
        color: white;
        padding: var(--spacing-3) var(--spacing-6);
        border-radius: var(--radius-lg);
        font-weight: 600;
        font-size: var(--font-sizes-sm);
        box-shadow: var(--shadow-md);
        transition: all 0.2s ease;
    }

    .contact-btn:hover {
        transform: translateY(-2px);
        box-shadow: var(--shadow-lg);
        background: linear-gradient(135deg, var(--success-light) 0%, var(--success) 100%);
    }

    @media (max-width: 768px) {
        .header-container {
            padding: var(--spacing-3) var(--spacing-4);
            gap: var(--spacing-4);
        }

        .contact-btn {
            display: none;
        }

        .logo-line {
            font-size: var(--font-sizes-lg);
        }
    }

    @media (max-width: 640px) {
        .header-container {
            gap: var(--spacing-3);
        }

        .phone-number {
            font-size: var(--font-sizes-base);
        }

        .phone-label {
            font-size: 0.7rem;
        }
    }

    @media (max-width: 480px) {
        .header-container {
            padding: var(--spacing-2) var(--spacing-3);
            gap: var(--spacing-2);
        }

        .logo-line {
            font-size: var(--font-sizes-base);
        }
    }

    @media (max-width: 320px) {
        .logo-line {
            font-size: var(--font-sizes-sm);
        }
        
        .phone-info {
            align-items: center;
        }
        
        .phone-number {
            font-size: var(--font-sizes-sm);
            text-align: center;
        }
        
        .phone-label {
            font-size: 0.6rem;
            text-align: center;
        }
    }
</style>