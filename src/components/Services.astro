---
// Services section component using text configuration
import { getTexts } from '../utils/textConfig';

const texts = getTexts();
const services = texts.services;
const company = texts.company;
const ariaLabels = texts.ariaLabels;
---

<section class="services">
    <div class="services-container">
        <div class="section-header">
            <div class="header-badge">
                <span>{services.badge}</span>
            </div>
            <h2>{services.title}</h2>
            <p class="section-description">
                {services.description}
            </p>
        </div>
        
        <div class="services-grid">
            {services.items.map((service) => (
                <article class="service-card" aria-label={`${ariaLabels.services.serviceCard} ${service.title}`}>
                    <div class="service-content">
                        <h3 class="service-title">{service.title}</h3>
                        <p class="service-description">{service.description}</p>
                        
                        <ul class="service-features">
                            {service.features.map((feature) => (
                                <li class="feature-item">
                                    {feature}
                                </li>
                            ))}
                        </ul>
                        
                        <div class="service-actions">
                            <button 
                                class="service-btn primary"
                                onclick={`window.location.href='tel:${company.phone}'`}
                                aria-label={`${ariaLabels.services.ctaButton} - ${service.title}`}
                            >
                                {service.buttonText}
                            </button>
                        </div>
                    </div>
                </article>
            ))}
        </div>
        
        <div class="services-cta">
            <div class="cta-content">
                <h3>{services.cta.title}</h3>
                <p>
                    {services.cta.description}
                </p>
                <div class="cta-phone">
                    <a href={`tel:${company.phone}`} class="phone-number">{services.cta.phoneNumber}</a>
                    <span class="phone-description">{services.cta.phoneDescription}</span>
                </div>
            </div>

        </div>
    </div>
</section>

<style>
    .services {
        padding: var(--spacing-20) var(--spacing-6);
        background: linear-gradient(135deg, var(--gray-50) 0%, white 100%);
    }
    
    .services-container {
        max-width: 1200px;
        margin: 0 auto;
    }
    
    .section-header {
        text-align: center;
        max-width: 800px;
        margin: 0 auto var(--spacing-16);
    }
    
    .header-badge {
        display: inline-flex;
        align-items: center;
        background: linear-gradient(135deg, var(--primary-blue-light), var(--secondary-blue));
        color: white;
        padding: var(--spacing-2) var(--spacing-4);
        border-radius: var(--radius-xl);
        font-size: var(--font-sizes-sm);
        font-weight: 600;
        margin-bottom: var(--spacing-6);
    }
    
    .services h2 {
        font-size: var(--font-sizes-4xl);
        margin-bottom: var(--spacing-6);
        color: var(--gray-900);
        line-height: 1.2;
    }
    
    .section-description {
        font-size: var(--font-sizes-lg);
        color: var(--gray-600);
        line-height: 1.6;
        margin: 0;
    }
    
    .services-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: var(--spacing-8);
        margin-bottom: var(--spacing-20);
    }
    
    .service-card {
        background: white;
        border-radius: var(--radius-xl);
        overflow: hidden;
        box-shadow: var(--shadow-lg);
        transition: all 0.3s ease;
        border: 1px solid var(--gray-200);
    }
    
    .service-card:hover {
        transform: translateY(-8px);
        box-shadow: var(--shadow-xl);
        border-color: var(--primary-blue-light);
    }
    
    .service-image {
        position: relative;
        height: 200px;
        overflow: hidden;
    }
    
    .service-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }
    
    .service-card:hover .service-image img {
        transform: scale(1.05);
    }
    
    .service-overlay {
        position: absolute;
        top: var(--spacing-4);
        right: var(--spacing-4);
    }
    
    .service-keywords {
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(10px);
        color: var(--primary-blue);
        padding: var(--spacing-2) var(--spacing-3);
        border-radius: var(--radius-lg);
        font-size: var(--font-sizes-xs);
        font-weight: 600;
    }
    
    .service-content {
        padding: var(--spacing-6);
    }
    
    .service-title {
        font-size: var(--font-sizes-xl);
        font-weight: 700;
        color: var(--gray-900);
        margin-bottom: var(--spacing-3);
    }
    
    .service-description {
        color: var(--gray-600);
        line-height: 1.6;
        margin-bottom: var(--spacing-6);
    }
    
    .service-features {
        padding: 0;
        margin: 0 0 var(--spacing-6) 0;
        list-style: disc;
        padding-left: 0.5em;
    }
    
    .feature-item {
        display: flex;
        align-items: center;
        gap: var(--spacing-2);
        margin-bottom: var(--spacing-2);
        font-size: var(--font-sizes-sm);
        color: var(--gray-700);
    }
    
    .feature-item::before {
        content: 'â€¢';
        color: var(--primary-blue, #1e3a8a);
        margin-right: 0.5em;
        font-size: 1.2em;
        line-height: 1;
    }
    
    .feature-icon {
        width: 20px;
        height: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--success);
        border-radius: 50%;
        flex-shrink: 0;
    }
    
    .service-actions {
        display: flex;
        gap: var(--spacing-3);
    }
    
    .service-btn {
        flex: 1;
        padding: var(--spacing-3) var(--spacing-4);
        border-radius: var(--radius-lg);
        font-weight: 600;
        font-size: var(--font-sizes-sm);
        transition: all 0.2s ease;
        text-align: center;
    }
    
    .service-btn.primary {
        background: linear-gradient(135deg, var(--primary-blue), var(--primary-blue-light));
        color: white;
        box-shadow: var(--shadow-md);
    }
    
    .service-btn.primary:hover {
        transform: translateY(-1px);
        box-shadow: var(--shadow-lg);
    }
    
    .service-btn.secondary {
        background: var(--gray-100);
        color: var(--gray-700);
        border: 1px solid var(--gray-300);
    }
    
    .service-btn.secondary:hover {
        background: var(--gray-200);
        border-color: var(--gray-400);
    }
    
    .services-cta {
        background: linear-gradient(135deg, #dc2626 0%, #b91c1c 50%, #991b1b 100%);
        border-radius: var(--radius-xl);
        padding: var(--spacing-12);
        gap: var(--spacing-10);
        align-items: center;
        color: white;
        box-shadow: 0 20px 60px rgba(220, 38, 38, 0.3), 0 8px 32px rgba(220, 38, 38, 0.2);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }
    
    .services-cta::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
        transition: left 0.6s ease;
    }
    
    .services-cta:hover::before {
        left: 100%;
    }
    
    .services-cta:hover {
        transform: translateY(-3px);
        box-shadow: 0 25px 70px rgba(220, 38, 38, 0.4), 0 10px 40px rgba(220, 38, 38, 0.3);
    }
    
    .cta-content h3 {
        font-size: var(--font-sizes-3xl);
        font-weight: 700;
        margin-bottom: var(--spacing-4);
        color: white;
    }
    
    .cta-content p {
        font-size: var(--font-sizes-lg);
        margin-bottom: var(--spacing-6);
        opacity: 0.9;
    }
    
    .cta-phone {
        text-align: center;
        padding: var(--spacing-6);
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(10px);
        border-radius: var(--radius-lg);
        border: 2px solid rgba(255, 255, 255, 0.4);
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease;
    }
    
    .cta-phone:hover {
        transform: translateY(-2px);
        box-shadow: 0 12px 40px rgba(0, 0, 0, 0.3);
        background: rgba(255, 255, 255, 0.25);
        border-color: rgba(255, 255, 255, 0.6);
    }
    
    .phone-number {
        display: block;
        font-size: var(--font-sizes-3xl);
        font-weight: 800;
        color: white;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
        transition: all 0.2s ease;
    }
    
    .phone-number:hover {
        color: #fef2f2;
        text-decoration: none;
    }
    
    .phone-description {
        font-size: var(--font-sizes-sm);
        opacity: 0.9;
    }
    
    .cta-image {
        position: relative;
        border-radius: var(--radius-lg);
        overflow: hidden;
        box-shadow: var(--shadow-lg);
    }
    
    .cta-image img {
        width: 100%;
        height: 300px;
        object-fit: cover;
    }
    
    @media (max-width: 768px) {
        .services {
            padding: var(--spacing-16) var(--spacing-4);
        }
        
        .services h2 {
            font-size: var(--font-sizes-3xl);
        }
        
        .services-grid {
            grid-template-columns: 1fr;
            gap: var(--spacing-6);
        }
        
        .services-cta {
            grid-template-columns: 1fr;
            gap: var(--spacing-6);
            padding: var(--spacing-8);
        }
        
        .cta-content h3 {
            font-size: var(--font-sizes-2xl);
        }
        
        .phone-number {
            font-size: var(--font-sizes-2xl);
        }
    }
</style> 