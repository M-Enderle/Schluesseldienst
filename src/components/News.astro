---
// Service area coverage with modern professional design
const serviceAreas = [
    {
        area: "Kaufbeuren Zentrum",
        description: "Schneller Schlüsseldienst im Herzen Kaufbeurens - Altstadt, Fußgängerzone und Wohngebiete",
        responseTime: "10-15 Min",
        image: "https://via.placeholder.com/300x200/1e3a8a/ffffff?text=City+Center",
        features: ["Altstadt", "Fußgängerzone", "Zentrale Lage"]
    },
    {
        area: "Neugablonz",
        description: "24h Aufsperrdienst im größten Stadtteil - Wohnsiedlungen und Gewerbegebiete",
        responseTime: "15-20 Min",
        image: "https://via.placeholder.com/300x200/3b82f6/ffffff?text=Neugablonz",
        features: ["Wohnsiedlungen", "Gewerbegebiete", "Größter Stadtteil"]
    },
    {
        area: "Oberbeuren",
        description: "Zuverlässiger Schlüsseldienst für alle Haushalte und Betriebe in Oberbeuren",
        responseTime: "20-25 Min",
        image: "https://via.placeholder.com/300x200/10b981/ffffff?text=Oberbeuren",
        features: ["Wohngebiete", "Betriebe", "Schnelle Anfahrt"]
    },
    {
        area: "Hirschzell",
        description: "Professionelle Türöffnung auch in den ruhigeren Wohngebieten von Hirschzell",
        responseTime: "20-30 Min",
        image: "https://via.placeholder.com/300x200/f59e0b/ffffff?text=Hirschzell",
        features: ["Ruhige Lage", "Wohngebiete", "Zuverlässig"]
    },
    {
        area: "Kleinkemnat",
        description: "Auch in Kleinkemnat sind wir Ihr schneller und zuverlässiger Aufsperrdienst",
        responseTime: "25-30 Min",
        image: "https://via.placeholder.com/300x200/06b6d4/ffffff?text=Kleinkemnat",
        features: ["Peripherie", "Schneller Service", "Zuverlässig"]
    },
    {
        area: "Umgebung Kaufbeuren",
        description: "Wir bedienen auch Buchloe, Mindelheim, Marktoberdorf und weitere Orte im Umkreis",
        responseTime: "30-45 Min",
        image: "https://via.placeholder.com/300x200/ef4444/ffffff?text=Surrounding+Areas",
        features: ["Buchloe", "Mindelheim", "Marktoberdorf"]
    }
];
---

<section class="service-areas">
    <div class="service-areas-container">
        <div class="section-header">
            <div class="header-badge">
                <span>Unser Einsatzgebiet</span>
            </div>
            <h2>Schlüsseldienst-Abdeckung in Kaufbeuren und Umgebung</h2>
            <p class="section-description">
                Unser lokaler Schlüsseldienst ist in allen Stadtteilen von Kaufbeuren schnell erreichbar. 
                Kurze Anfahrtswege bedeuten schnelle Hilfe bei Aussperrungen und Notfällen.
            </p>
        </div>
        
        <div class="service-areas-grid">
            {serviceAreas.map((area) => (
                <article class="area-card">
                    <div class="area-image">
                        <img src={area.image} alt={`Schlüsseldienst ${area.area}`} loading="lazy">
                        <div class="area-overlay">
                            <div class="response-badge">
                                <img src="https://via.placeholder.com/16x16/ffffff/10b981?text=⏱" alt="Time" class="time-icon">
                                <span>{area.responseTime}</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="area-content">
                        <h3 class="area-title">{area.area}</h3>
                        <p class="area-description">{area.description}</p>
                        
                        <ul class="area-features">
                            {area.features.map((feature) => (
                                <li class="feature-item">
                                    <img src="https://via.placeholder.com/12x12/10b981/ffffff?text=✓" alt="Check" class="check-icon">
                                    {feature}
                                </li>
                            ))}
                        </ul>
                        
                        <div class="area-services">
                            <div class="service-tag">24h Verfügbar</div>
                            <div class="service-tag">Festpreise</div>
                            <div class="service-tag">Vor Ort Service</div>
                        </div>
                    </div>
                </article>
            ))}
        </div>
        
        <div class="coverage-summary">
            <div class="summary-content">
                <div class="summary-text">
                    <h3>Vollständige Abdeckung von Kaufbeuren</h3>
                    <p>
                        Egal ob Altstadt, Neugablonz oder Oberbeuren - unser Schlüsseldienst-Team kennt jeden 
                        Stadtteil und findet den schnellsten Weg zu Ihnen. Professionelle Hilfe, wann immer Sie sie brauchen.
                    </p>
                    <button class="coverage-cta">
                        <span class="cta-text">Jetzt anrufen: 0800-123456</span>
                        <span class="cta-subtext">24/7 erreichbar für alle Stadtteile</span>
                    </button>
                </div>
                
                <div class="coverage-stats">
                    <div class="stat-item">
                        <div class="stat-number">100%</div>
                        <div class="stat-label">Kaufbeuren Abdeckung</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-number">24/7</div>
                        <div class="stat-label">Verfügbarkeit</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-number">&lt;30 Min</div>
                        <div class="stat-label">Ø Anfahrtszeit</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-number">6</div>
                        <div class="stat-label">Stadtteile</div>
                    </div>
                </div>
            </div>
            
            <div class="coverage-map">
                <img src="https://via.placeholder.com/400x300/1e3a8a/ffffff?text=Kaufbeuren+Coverage+Map" alt="Kaufbeuren Einsatzgebiet Karte" loading="lazy">
            </div>
        </div>
    </div>
</section>

<style>
    .service-areas {
        padding: var(--spacing-20) var(--spacing-6);
        background: var(--gray-50);
    }
    
    .service-areas-container {
        max-width: 1200px;
        margin: 0 auto;
    }
    
    .section-header {
        text-align: center;
        max-width: 800px;
        margin: 0 auto var(--spacing-16);
    }
    
    .header-badge {
        display: inline-flex;
        align-items: center;
        background: linear-gradient(135deg, var(--warning), #fb923c);
        color: white;
        padding: var(--spacing-2) var(--spacing-4);
        border-radius: var(--radius-xl);
        font-size: var(--font-sizes-sm);
        font-weight: 600;
        margin-bottom: var(--spacing-6);
    }
    
    .service-areas h2 {
        font-size: var(--font-sizes-4xl);
        margin-bottom: var(--spacing-6);
        color: var(--gray-900);
        line-height: 1.2;
    }
    
    .section-description {
        font-size: var(--font-sizes-lg);
        color: var(--gray-600);
        line-height: 1.6;
        margin: 0;
    }
    
    .service-areas-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: var(--spacing-6);
        margin-bottom: var(--spacing-16);
    }
    
    .area-card {
        background: white;
        border-radius: var(--radius-xl);
        overflow: hidden;
        box-shadow: var(--shadow-md);
        transition: all 0.3s ease;
        border: 1px solid var(--gray-200);
    }
    
    .area-card:hover {
        transform: translateY(-6px);
        box-shadow: var(--shadow-xl);
        border-color: var(--warning);
    }
    
    .area-image {
        position: relative;
        height: 200px;
        overflow: hidden;
    }
    
    .area-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }
    
    .area-card:hover .area-image img {
        transform: scale(1.05);
    }
    
    .area-overlay {
        position: absolute;
        top: var(--spacing-4);
        right: var(--spacing-4);
    }
    
    .response-badge {
        display: flex;
        align-items: center;
        gap: var(--spacing-2);
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        color: var(--warning);
        padding: var(--spacing-2) var(--spacing-3);
        border-radius: var(--radius-lg);
        font-size: var(--font-sizes-sm);
        font-weight: 700;
        box-shadow: var(--shadow-sm);
    }
    
    .time-icon {
        width: 16px;
        height: 16px;
    }
    
    .area-content {
        padding: var(--spacing-6);
    }
    
    .area-title {
        font-size: var(--font-sizes-xl);
        font-weight: 700;
        color: var(--gray-900);
        margin-bottom: var(--spacing-3);
    }
    
    .area-description {
        color: var(--gray-600);
        line-height: 1.6;
        margin-bottom: var(--spacing-4);
        font-size: var(--font-sizes-sm);
    }
    
    .area-features {
        list-style: none;
        padding: 0;
        margin: 0 0 var(--spacing-4) 0;
    }
    
    .feature-item {
        display: flex;
        align-items: center;
        gap: var(--spacing-2);
        margin-bottom: var(--spacing-1);
        font-size: var(--font-sizes-sm);
        color: var(--gray-700);
    }
    
    .check-icon {
        width: 12px;
        height: 12px;
        flex-shrink: 0;
    }
    
    .area-services {
        display: flex;
        flex-wrap: wrap;
        gap: var(--spacing-2);
    }
    
    .service-tag {
        background: var(--success);
        color: white;
        padding: var(--spacing-1) var(--spacing-3);
        border-radius: var(--radius-lg);
        font-size: var(--font-sizes-xs);
        font-weight: 600;
    }
    
    .coverage-summary {
        background: linear-gradient(135deg, var(--primary-blue), var(--primary-blue-light));
        border-radius: var(--radius-xl);
        padding: var(--spacing-12);
        color: white;
        box-shadow: var(--shadow-xl);
    }
    
    .summary-content {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: var(--spacing-10);
        align-items: center;
        margin-bottom: var(--spacing-10);
    }
    
    .summary-text h3 {
        font-size: var(--font-sizes-3xl);
        font-weight: 700;
        margin-bottom: var(--spacing-4);
        color: white;
    }
    
    .summary-text p {
        font-size: var(--font-sizes-lg);
        line-height: 1.6;
        margin-bottom: var(--spacing-6);
        opacity: 0.95;
    }
    
    .coverage-cta {
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        color: white;
        padding: var(--spacing-4) var(--spacing-6);
        border-radius: var(--radius-xl);
        border: 1px solid rgba(255, 255, 255, 0.3);
        transition: all 0.3s ease;
        text-align: center;
        width: 100%;
        max-width: 400px;
    }
    
    .coverage-cta:hover {
        background: rgba(255, 255, 255, 0.3);
        transform: translateY(-2px);
    }
    
    .cta-text {
        display: block;
        font-size: var(--font-sizes-lg);
        font-weight: 700;
        margin-bottom: var(--spacing-1);
    }
    
    .cta-subtext {
        display: block;
        font-size: var(--font-sizes-sm);
        opacity: 0.9;
    }
    
    .coverage-stats {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: var(--spacing-4);
    }
    
    .stat-item {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        padding: var(--spacing-4);
        border-radius: var(--radius-lg);
        text-align: center;
        border: 1px solid rgba(255, 255, 255, 0.2);
    }
    
    .stat-number {
        font-size: var(--font-sizes-2xl);
        font-weight: 800;
        color: white;
        margin-bottom: var(--spacing-1);
    }
    
    .stat-label {
        font-size: var(--font-sizes-xs);
        opacity: 0.9;
        font-weight: 500;
    }
    
    .coverage-map {
        border-radius: var(--radius-lg);
        overflow: hidden;
        box-shadow: var(--shadow-lg);
    }
    
    .coverage-map img {
        width: 100%;
        height: 300px;
        object-fit: cover;
    }
    
    @media (max-width: 768px) {
        .service-areas {
            padding: var(--spacing-16) var(--spacing-4);
        }
        
        .service-areas-grid {
            grid-template-columns: 1fr;
            gap: var(--spacing-4);
        }
        
        .service-areas h2 {
            font-size: var(--font-sizes-3xl);
        }
        
        .section-description {
            font-size: var(--font-sizes-base);
        }
        
        .area-content {
            padding: var(--spacing-4);
        }
        
        .coverage-summary {
            padding: var(--spacing-8);
        }
        
        .summary-content {
            grid-template-columns: 1fr;
            gap: var(--spacing-6);
        }
        
        .summary-text h3 {
            font-size: var(--font-sizes-2xl);
        }
        
        .summary-text p {
            font-size: var(--font-sizes-base);
        }
        
        .coverage-stats {
            grid-template-columns: repeat(2, 1fr);
            gap: var(--spacing-3);
        }
    }
</style> 