---
import { Image } from 'astro:assets';
import { getTexts } from '../utils/textConfig';

const texts = getTexts();
const quote = texts.quote;
const company = texts.company;
---

<section class="quote">
    <div class="quote-container">
        <div class="quote-content">
            <div class="quote-image">
                <Image 
                    src="/images/me.jpg" 
                    alt={`Ihr SchlÃ¼sseldienst-Experte aus ${company.serviceArea}`}
                    loading="lazy" 
                    width="200" 
                    height="200"
                    class="owner-image"
                />
            </div>
            <div class="quote-text">
                <blockquote>
                    {quote.text}
                </blockquote>
                <div class="quote-author">
                    <h3>{quote.author.name}</h3>
                    <p>{quote.author.title}</p>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .quote {
        padding: var(--spacing-16) var(--spacing-6);
        background: linear-gradient(135deg, var(--primary-blue) 0%, var(--primary-blue-dark) 100%);
        color: white;
    }
    
    .quote-container {
        max-width: 1000px;
        margin: 0 auto;
    }
    
    .quote-content {
        display: grid;
        grid-template-columns: auto 1fr;
        gap: var(--spacing-8);
        align-items: center;
    }
    
    .quote-image {
        position: relative;
    }
    
    .owner-image {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        border: 4px solid rgba(255, 255, 255, 0.3);
        object-fit: cover;
        box-shadow: var(--shadow-xl);
    }
    
    .quote-text {
        text-align: left;
    }
    
    blockquote {
        font-size: var(--font-sizes-lg);
        font-style: italic;
        line-height: 1.6;
        margin: 0 0 var(--spacing-6) 0;
        opacity: 0.95;
        position: relative;
    }
    
    blockquote::before {
        content: '"';
        font-size: 3rem;
        color: rgba(255, 255, 255, 0.3);
        position: absolute;
        top: -10px;
        left: -30px;
        font-family: serif;
    }
    
    .quote-author h3 {
        font-size: var(--font-sizes-xl);
        font-weight: 700;
        margin-bottom: var(--spacing-1);
        color: white;
    }
    
    .quote-author p {
        font-size: var(--font-sizes-sm);
        opacity: 0.8;
        margin: 0;
    }
    
    @media (max-width: 768px) {
        .quote {
            padding: var(--spacing-12) var(--spacing-4);
        }
        
        .quote-content {
            grid-template-columns: 1fr;
            text-align: center;
            gap: var(--spacing-6);
        }
        
        .owner-image {
            width: 100px;
            height: 100px;
        }
        
        blockquote {
            font-size: var(--font-sizes-base);
        }
        
        blockquote::before {
            display: none;
        }
    }
</style> 