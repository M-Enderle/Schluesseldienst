---
import { getTexts } from '../utils/textConfig';

export interface Props {
    title?: string;
    description?: string;
    canonical?: string;
}

const texts = getTexts();
const { title = texts.seo.title, description = texts.seo.description, canonical } = Astro.props;

const currentUrl = canonical || Astro.url.href;

// FAQ Schema Markup
const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "Was kostet die Türöffnung beim Schlüsseldienst Kaufbeuren?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Wir arbeiten mit transparenten Festpreisen ohne versteckte Kosten. Kostenvoranschlag am Telefon."
      }
    },
    {
      "@type": "Question", 
      "name": "Wie schnell ist der Schlüsseldienst Kaufbeuren vor Ort?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Wir sind sehr schnell bei Ihnen vor Ort. Bei Notfällen bemühen wir uns um die schnellstmögliche Anfahrt."
      }
    },
    {
      "@type": "Question",
      "name": "Ist der Schlüsseldienst auch nachts und am Wochenende verfügbar?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Ja, unser 24h Notdienst ist rund um die Uhr verfügbar - auch nachts, an Wochenenden und Feiertagen. Türöffnung, wenn Sie sie brauchen."
      }
    }
  ]
};

// Business Schema Markup
const businessSchema = {
  "@context": "https://schema.org",
  "@type": "LocksmithBusiness", 
  "name": texts.company.name,
  "description": texts.company.description,
  "telephone": texts.company.phone,
  "address": {
    "@type": "PostalAddress",
    "addressLocality": texts.company.address.city,
    "@addressRegion": "Bayern", 
    "addressCountry": "DE"
  },
  "areaServed": texts.company.serviceArea,
  "serviceType": ["Türöffnung", "Schlosswechsel", "Auto-Schlüsseldienst", "Einbruchschutz", "Tresoröffnung"],
  "openingHours": texts.company.openingHours,
  "priceRange": "$$",
  "paymentAccepted": ["Cash", "Credit Card"]
};
---

<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1, user-scalable=no">
    
    <!-- Primary SEO Tags -->
    <title>{title}</title>
    <meta name="description" content={description}>
    <meta name="robots" content="follow, index, max-snippet:-1, max-video-preview:-1, max-image-preview:large">
    
    <!-- Canonical URL -->
    <link rel="canonical" href={currentUrl}>
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content={currentUrl}>
    <meta property="og:title" content={title}>
    <meta property="og:description" content={description}>
    <meta property="og:locale" content="de_DE">
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content={currentUrl}>
    <meta property="twitter:title" content={title}>
    <meta property="twitter:description" content={description}>
    
    <!-- Local Business Keywords -->
    <meta name="keywords" content={texts.seo.keywords}>
    
    <!-- Preload Critical Resources -->
    <link rel="preload" href="/fonts/inter-var.woff2" as="font" type="font/woff2" crossorigin>
    
    <!-- DNS Prefetch -->
    <link rel="dns-prefetch" href="//www.google-analytics.com">
    <link rel="dns-prefetch" href="//fonts.googleapis.com">
    
    <!-- Schema Markup -->
    <script type="application/ld+json" set:html={JSON.stringify(faqSchema)}></script>
    <script type="application/ld+json" set:html={JSON.stringify(businessSchema)}></script>
    
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/favicon.png">
</head>
<body>
    <slot />
    
    <!-- Google Analytics (replace with your tracking ID) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=GA_MEASUREMENT_ID"></script>
    <script>
        // @ts-ignore
        window.dataLayer = window.dataLayer || [];
        // @ts-ignore
        function gtag(){dataLayer.push(arguments);}
        // @ts-ignore
        gtag('js', new Date());
        // @ts-ignore
        gtag('config', 'GA_MEASUREMENT_ID');
    </script>

    <button class="overlaybutton" aria-label={texts.floatingButton.ariaLabel} onclick={`window.location.href='tel:${texts.company.phone}'`}>
      <span class="btn-text">{texts.floatingButton.text}</span>
      <span class="phone-number">{texts.floatingButton.phone}</span>
      <span class="btn-subtext">{texts.floatingButton.subtext}</span>
    </button>

    <script>
        // Show/hide floating button based on scroll position
        window.addEventListener('scroll', function() {
            const button = document.querySelector('.overlaybutton') as HTMLElement;
            const scrollPosition = window.scrollY;
            const showThreshold = 200; // Show button after scrolling 200px
            
            if (button) {
                if (scrollPosition > showThreshold) {
                    button.classList.add('visible');
                } else {
                    button.classList.remove('visible');
                }
            }
        });
    </script>

</body>
</html>

<style is:global>
    :root {
        /* Professional Blue Theme */
        --primary-blue: #1e3a8a;
        --primary-blue-light: #3b82f6;
        --primary-blue-dark: #1e40af;
        --secondary-blue: #0ea5e9;
        --accent-blue: #06b6d4;
        
        /* Neutral Colors */
        --gray-50: #f8fafc;
        --gray-100: #f1f5f9;
        --gray-200: #e2e8f0;
        --gray-300: #cbd5e1;
        --gray-400: #94a3b8;
        --gray-500: #64748b;
        --gray-600: #475569;
        --gray-700: #334155;
        --gray-800: #1e293b;
        --gray-900: #0f172a;
        
        /* Status Colors */
        --success: #10b981;
        --success-light: #34d399;
        --warning: #f59e0b;
        --error: #ef4444;
        
        /* Typography */
        --font-sans: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
        --font-sizes-xs: 0.75rem;
        --font-sizes-sm: 0.875rem;
        --font-sizes-base: 1rem;
        --font-sizes-lg: 1.125rem;
        --font-sizes-xl: 1.25rem;
        --font-sizes-2xl: 1.5rem;
        --font-sizes-3xl: 1.875rem;
        --font-sizes-4xl: 2.25rem;
        --font-sizes-5xl: 3rem;
        
        /* Spacing */
        --spacing-1: 0.25rem;
        --spacing-2: 0.5rem;
        --spacing-3: 0.75rem;
        --spacing-4: 1rem;
        --spacing-5: 1.25rem;
        --spacing-6: 1.5rem;
        --spacing-8: 2rem;
        --spacing-10: 2.5rem;
        --spacing-12: 3rem;
        --spacing-16: 4rem;
        --spacing-20: 5rem;
        
        /* Border Radius */
        --radius-sm: 0.375rem;
        --radius-md: 0.5rem;
        --radius-lg: 0.75rem;
        --radius-xl: 1rem;
        
        /* Shadows */
        --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
        --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
        --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
        --shadow-xl: 0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1);
    }

    * {
        box-sizing: border-box;
    }

    body {
        font-family: var(--font-sans);
        margin: 0;
        padding: 0;
        background-color: var(--gray-50);
        color: var(--gray-800);
        line-height: 1.6;
        font-size: var(--font-sizes-base);
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    }

    h1, h2, h3, h4, h5, h6 {
        font-weight: 700;
        line-height: 1.2;
        margin: 0;
        color: var(--gray-900);
    }

    h1 {
        font-size: var(--font-sizes-4xl);
    }

    h2 {
        font-size: var(--font-sizes-3xl);
    }

    h3 {
        font-size: var(--font-sizes-2xl);
    }

    p {
        margin: 0 0 var(--spacing-4) 0;
    }

    a {
        color: var(--primary-blue);
        text-decoration: none;
        transition: color 0.2s ease;
    }

    a:hover {
        color: var(--primary-blue-light);
    }

    button {
        font-family: inherit;
        cursor: pointer;
        border: none;
        transition: all 0.2s ease;
    }

    img {
        max-width: 100%;
        height: auto;
    }

    .overlaybutton {
      position: fixed;
      bottom: var(--spacing-4);
      left: var(--spacing-4);
      right: var(--spacing-4);
      width: calc(100% - 2rem);
      height: 80px;
      background: linear-gradient(135deg, var(--success) 0%, var(--success-light) 100%);
      color: white;
      padding: var(--spacing-4);
      border-radius: var(--radius-xl);
      transition: all 0.3s ease;
      text-align: center;
      box-shadow: var(--shadow-md);
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      z-index: 9999;
      border: none;
      cursor: pointer;
      opacity: 0;
      transform: translateY(100px);
      pointer-events: none;
    }
    
    .overlaybutton.visible {
      opacity: 1;
      transform: translateY(0);
      pointer-events: auto;
    }
    .overlaybutton:hover {
      transform: translateY(-2px);
      box-shadow: var(--shadow-lg);
    }
    
    .btn-text {
      display: block;
      font-size: var(--font-sizes-sm);
      margin-bottom: var(--spacing-1);
      opacity: 0.9;
    }
    
    .phone-number {
      display: block;
      font-size: var(--font-sizes-lg);
      font-weight: 800;
      margin-bottom: var(--spacing-1);
    }
    
    .btn-subtext {
      display: block;
      font-size: var(--font-sizes-xs);
      opacity: 0.8;
    }

    @media (min-width: 768px) {
      .overlaybutton {
        display: none;
      }
    }
</style> 