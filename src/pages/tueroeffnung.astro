---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout 
    title="Türöffnung Kaufbeuren - Professionell & Günstig ab 29€ | 24h Notdienst"
    description="Türöffnung in Kaufbeuren ✅ Schnell & professionell ✅ ab 29€ Festpreis ✅ Keine Beschädigung ✅ 24h Notdienst ☎ Jetzt anrufen!"
>
    <Header />
    <main class="service-page">
        <div class="service-container">
            <!-- Hero Section -->
            <section class="service-hero">
                <div class="hero-content">
                    <h1>Türöffnung Kaufbeuren</h1>
                    <p class="hero-subtitle">Professionelle Türöffnung ohne Beschädigung - 24 Stunden am Tag</p>
                    <div class="hero-features">
                        <div class="feature">✅ Ab 29€ Festpreis</div>
                        <div class="feature">✅ 10-30 Min vor Ort</div>
                        <div class="feature">✅ Keine Beschädigung</div>
                        <div class="feature">✅ 24h Notdienst</div>
                    </div>
                    <div class="hero-cta">
                        <button class="cta-button" onclick="window.location.href='tel:+491604996655'">
                            <span>Jetzt anrufen: +49 1604 996655</span>
                        </button>
                    </div>
                </div>
            </section>

            <!-- Service Details -->
            <section class="service-details">
                <h2>Türöffnung in Kaufbeuren - Schnell und zuverlässig</h2>
                <div class="service-grid">
                    <div class="service-info">
                        <h3>Unsere Türöffnungsleistungen</h3>
                        <ul>
                            <li><strong>Wohnungstüren öffnen</strong> - Alle Schlosstypen</li>
                            <li><strong>Haustüren öffnen</strong> - Auch Sicherheitsschlösser</li>
                            <li><strong>Balkontüren</strong> - Ohne Glasbruch</li>
                            <li><strong>Kellertüren</strong> - Alle Zugangswege</li>
                            <li><strong>Bürotüren</strong> - Gewerbliche Objekte</li>
                            <li><strong>Garagentore</strong> - Mechanisch & elektrisch</li>
                        </ul>
                        
                        <h3>Warum Schlüsseldienst Kaufbeuren?</h3>
                        <ul>
                            <li>✓ <strong>Transparente Preise</strong> - Festpreise ohne Überraschungen</li>
                            <li>✓ <strong>Schnelle Anfahrt</strong> - 10-30 Minuten in ganz Kaufbeuren</li>
                            <li>✓ <strong>Professionelle Technik</strong> - Moderne Öffnungsmethoden</li>
                            <li>✓ <strong>Erfahrene Techniker</strong> - Über 10 Jahre Erfahrung</li>
                            <li>✓ <strong>24h Verfügbar</strong> - Auch nachts, Wochenende, Feiertage</li>
                        </ul>
                    </div>
                    
                    <div class="price-info">
                        <div class="price-card">
                            <h3>Preise Türöffnung</h3>
                            <div class="price-item">
                                <span class="service">Einfache Türöffnung</span>
                                <span class="price">ab 29€</span>
                            </div>
                            <div class="price-item">
                                <span class="service">Sicherheitstür</span>
                                <span class="price">ab 49€</span>
                            </div>
                            <div class="price-item">
                                <span class="service">Mehrfachverriegelung</span>
                                <span class="price">ab 69€</span>
                            </div>
                            <div class="price-item">
                                <span class="service">Nacht-/Wochenendzuschlag</span>
                                <span class="price">25€</span>
                            </div>
                            <p class="price-note">
                                * Alle Preise inkl. Anfahrt in Kaufbeuren<br>
                                * Kostenvoranschlag am Telefon
                            </p>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Process Section -->
            <section class="process-section">
                <h2>So läuft Ihre Türöffnung ab</h2>
                <div class="process-steps">
                    <div class="step">
                        <div class="step-number">1</div>
                        <h3>Anruf</h3>
                        <p>Sie rufen uns an - wir nehmen sofort ab und geben Ihnen einen Festpreis durch</p>
                    </div>
                    <div class="step">
                        <div class="step-number">2</div>
                        <h3>Anfahrt</h3>
                        <p>Unser Techniker macht sich sofort auf den Weg zu Ihnen - meist in 10-30 Minuten vor Ort</p>
                    </div>
                    <div class="step">
                        <div class="step-number">3</div>
                        <h3>Türöffnung</h3>
                        <p>Professionelle Öffnung ohne Beschädigung mit modernen Werkzeugen und Techniken</p>
                    </div>
                    <div class="step">
                        <div class="step-number">4</div>
                        <h3>Abschluss</h3>
                        <p>Sie zahlen den vereinbarten Preis - Bar oder Karte - und erhalten eine Rechnung</p>
                    </div>
                </div>
            </section>

            <!-- FAQ Section -->
            <section class="faq-section">
                <h2>Häufige Fragen zur Türöffnung</h2>
                <div class="faq-list">
                    <div class="faq-item">
                        <h3>Wie schnell sind Sie vor Ort?</h3>
                        <p>In der Regel sind wir innerhalb von 10-30 Minuten bei Ihnen vor Ort. Bei Notfällen bemühen wir uns um noch schnellere Zeiten.</p>
                    </div>
                    <div class="faq-item">
                        <h3>Wird die Tür beim Öffnen beschädigt?</h3>
                        <p>Nein, wir verwenden professionelle Techniken und Werkzeuge, die eine beschädigungsfreie Öffnung ermöglichen. Nur in seltenen Ausnahmefällen bei extrem hochsicherheitstechnik kann eine Beschädigung nicht vermieden werden - dies teilen wir Ihnen aber vorher mit.</p>
                    </div>
                    <div class="faq-item">
                        <h3>Welche Zahlungsmöglichkeiten gibt es?</h3>
                        <p>Sie können bar oder mit Karte (EC/Kreditkarte) bezahlen. Wir akzeptieren auch kontaktlose Zahlungen.</p>
                    </div>
                    <div class="faq-item">
                        <h3>Arbeiten Sie auch nachts und am Wochenende?</h3>
                        <p>Ja, unser 24h Notdienst ist rund um die Uhr verfügbar - auch nachts, an Wochenenden und Feiertagen. Es fällt lediglich ein geringer Zuschlag an.</p>
                    </div>
                </div>
            </section>

            <!-- Contact Section -->
            <section class="contact-section">
                <div class="contact-card">
                    <h2>Jetzt Türöffnung beauftragen</h2>
                    <p>Ausgesperrt? Rufen Sie uns jetzt an - wir sind sofort für Sie da!</p>
                    <div class="contact-info">
                        <div class="phone-big">
                            <a href="tel:+491604996655">+49 1604 996655</a>
                        </div>
                        <p>24h Notdienst • Kostenlose Beratung • Festpreise</p>
                    </div>
                </div>
            </section>
        </div>
    </main>
    <Footer />
</Layout>

<style>
    .service-page {
        background-color: var(--gray-50);
    }

    .service-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: var(--spacing-8) var(--spacing-6);
    }

    .service-hero {
        background: linear-gradient(135deg, var(--primary-blue) 0%, var(--primary-blue-dark) 100%);
        color: white;
        padding: var(--spacing-16) var(--spacing-8);
        border-radius: var(--radius-lg);
        margin-bottom: var(--spacing-12);
    }

    .service-hero h1 {
        color: white;
        font-size: var(--font-sizes-4xl);
        margin-bottom: var(--spacing-4);
    }

    .hero-subtitle {
        font-size: var(--font-sizes-xl);
        opacity: 0.9;
        margin-bottom: var(--spacing-8);
    }

    .hero-features {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: var(--spacing-4);
        margin-bottom: var(--spacing-8);
    }

    .feature {
        background: rgba(255, 255, 255, 0.1);
        padding: var(--spacing-3) var(--spacing-4);
        border-radius: var(--radius-md);
        font-weight: 600;
    }

    .cta-button {
        background: var(--success);
        color: white;
        padding: var(--spacing-4) var(--spacing-8);
        font-size: var(--font-sizes-lg);
        font-weight: 700;
        border-radius: var(--radius-md);
        transition: all 0.2s ease;
        cursor: pointer;
    }

    .cta-button:hover {
        background: var(--success-light);
        transform: translateY(-2px);
    }

    .service-details {
        margin-bottom: var(--spacing-16);
    }

    .service-details h2 {
        font-size: var(--font-sizes-3xl);
        margin-bottom: var(--spacing-8);
        text-align: center;
    }

    .service-grid {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: var(--spacing-12);
        margin-top: var(--spacing-8);
    }

    .service-info h3 {
        color: var(--primary-blue);
        margin-bottom: var(--spacing-4);
        font-size: var(--font-sizes-xl);
    }

    .service-info ul {
        list-style: none;
        padding: 0;
    }

    .service-info li {
        padding: var(--spacing-2) 0;
        border-bottom: 1px solid var(--gray-200);
    }

    .price-card {
        background: white;
        padding: var(--spacing-8);
        border-radius: var(--radius-lg);
        box-shadow: var(--shadow-lg);
        position: sticky;
        top: var(--spacing-8);
    }

    .price-card h3 {
        color: var(--primary-blue);
        margin-bottom: var(--spacing-6);
        font-size: var(--font-sizes-xl);
    }

    .price-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: var(--spacing-3) 0;
        border-bottom: 1px solid var(--gray-200);
    }

    .price-item .price {
        font-weight: 700;
        color: var(--success);
        font-size: var(--font-sizes-lg);
    }

    .price-note {
        font-size: var(--font-sizes-sm);
        color: var(--gray-600);
        margin-top: var(--spacing-4);
    }

    .process-section {
        background: white;
        padding: var(--spacing-16) var(--spacing-8);
        border-radius: var(--radius-lg);
        margin-bottom: var(--spacing-16);
    }

    .process-section h2 {
        text-align: center;
        margin-bottom: var(--spacing-12);
        font-size: var(--font-sizes-3xl);
    }

    .process-steps {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: var(--spacing-8);
    }

    .step {
        text-align: center;
        padding: var(--spacing-6);
    }

    .step-number {
        width: 60px;
        height: 60px;
        background: var(--primary-blue);
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: var(--font-sizes-2xl);
        font-weight: 700;
        margin: 0 auto var(--spacing-4);
    }

    .step h3 {
        color: var(--primary-blue);
        margin-bottom: var(--spacing-3);
    }

    .faq-section {
        margin-bottom: var(--spacing-16);
    }

    .faq-section h2 {
        text-align: center;
        margin-bottom: var(--spacing-12);
        font-size: var(--font-sizes-3xl);
    }

    .faq-list {
        display: grid;
        gap: var(--spacing-6);
    }

    .faq-item {
        background: white;
        padding: var(--spacing-6) var(--spacing-8);
        border-radius: var(--radius-lg);
        box-shadow: var(--shadow-md);
    }

    .faq-item h3 {
        color: var(--primary-blue);
        margin-bottom: var(--spacing-3);
        font-size: var(--font-sizes-lg);
    }

    .contact-section {
        background: linear-gradient(135deg, var(--success) 0%, var(--success-light) 100%);
        color: white;
        padding: var(--spacing-16) var(--spacing-8);
        border-radius: var(--radius-lg);
        text-align: center;
    }

    .contact-section h2 {
        color: white;
        margin-bottom: var(--spacing-4);
    }

    .phone-big {
        margin: var(--spacing-8) 0;
    }

    .phone-big a {
        color: white;
        font-size: var(--font-sizes-4xl);
        font-weight: 700;
        text-decoration: none;
    }

    @media (max-width: 768px) {
        .service-grid {
            grid-template-columns: 1fr;
        }
        
        .price-card {
            position: static;
        }
        
        .hero-features {
            grid-template-columns: 1fr;
        }
        
        .process-steps {
            grid-template-columns: 1fr;
        }
    }
</style> 